.goods-list-wrap {
  padding: 0;
  background: #fff;
  width: 100%;
  box-sizing: border-box;
}

.goods-container {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  padding: 0 24rpx;
}

.goods-item {
  width: 50%;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  padding: 10rpx;
}

.goods-card-inside {
  width: 342rpx;
  height: auto;
  border-radius: 8rpx;
  overflow: hidden;
}
