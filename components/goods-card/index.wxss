.goods-card {
  box-sizing: border-box;
  font-size: 24rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  background: #fff;
  transition: all 0.2s ease;
}

.goods-card:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.goods-card__main {
  position: relative;
  display: flex;
  flex-direction: column;
  width: 342rpx;
  overflow: hidden;
}

.goods-card__thumb {
  position: relative;
  width: 342rpx;
  height: 342rpx;
  overflow: hidden;
  border-radius: 12rpx 12rpx 0 0;
}

.goods-card__img {
  display: block;
  width: 100%;
  height: 100%;
  transition: transform 0.3s ease;
}

.goods-card__img:hover {
  transform: scale(1.05);
}

.goods-card__body {
  display: flex;
  flex-direction: column;
  padding: 16rpx;
  background: #fff;
}

.goods-card__title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-word;
  line-height: 36rpx;
  margin-bottom: 8rpx;
}

.goods-card__tags {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 0 0 12rpx 0;
}

.goods-card__tag {
  color: #ff6b35;
  background: rgba(255, 107, 53, 0.08);
  font-size: 20rpx;
  padding: 0 10rpx;
  border-radius: 10rpx;
  line-height: 32rpx;
  margin: 0 8rpx 6rpx 0;
  display: inline-block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/* 销量信息独立一行 */
.goods-card__sold {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.goods-card__footer {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-top: 4rpx;
  height: 48rpx;
}

.goods-card__price-area {
  display: flex;
  align-items: center;
  flex-grow: 1;
  overflow: hidden;
  height: 48rpx;
}

.goods-card__price {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff6b35;
  margin-right: 8rpx;
  white-space: nowrap;
  line-height: 1;
}

.goods-card__price-symbol {
  font-size: 24rpx;
  font-weight: normal;
  display: inline-block;
  line-height: 1;
  vertical-align: baseline;
}

.goods-card__origin-price {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
  white-space: nowrap;
  line-height: 1;
  margin-top: 2rpx;
}

.goods-card__action {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
  margin-left: 12rpx;
}

.goods-card__add-cart {
  width: 100%;
  height: 100%;
  transition: transform 0.15s ease;
}

.goods-card__add-cart:active {
  transform: scale(0.9);
}

