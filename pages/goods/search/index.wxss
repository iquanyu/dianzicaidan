/* 全局页面样式 */
page {
  box-sizing: border-box;
  min-height: 100vh;
  background-color: #f6f6f6;
  --td-brand-color: #FA550F;
  --td-brand-color-light: rgba(250, 85, 15, 0.1);
  --td-brand-color-active: #E64D0A;
  --td-gray-color-1: #f6f6f6;
  --td-gray-color-2: #eeeeee;
  --td-gray-color-3: #dddddd;
  --td-gray-color-4: #bbbbbb;
  --td-gray-color-5: #999999;
  --td-gray-color-6: #666666;
  --td-gray-color-7: #444444;
  --td-gray-color-8: #333333;
  --td-warning-color: #FF9C19;
  --td-success-color: #00B42A;
  --td-font-size-base: 28rpx;
  --td-font-size-s: 24rpx;
  --td-font-size-m: 30rpx;
  --td-font-size-l: 32rpx;
  --td-font-size-xl: 36rpx;
  color: var(--td-gray-color-8);
  font-size: var(--td-font-size-base);
}

/* 搜索页面主容器 */
.search-page {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding-bottom: 40rpx;
  background-color: #fff;
}

/* 头部搜索区域 */
.search-header {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: #fff;
  border-bottom: 1rpx solid var(--td-gray-color-2);
}

.search-header .t-search {
  flex: 1;
}

.search-btn {
  margin-left: 24rpx;
  font-size: var(--td-font-size-m);
  color: var(--td-gray-color-6);
}

/* 搜索历史 */
.search-history {
  padding: 24rpx;
  background-color: #fff;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.history-title {
  font-size: var(--td-font-size-l);
  font-weight: 500;
  color: var(--td-gray-color-8);
}

.history-list {
  display: flex;
  flex-direction: column;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--td-gray-color-1);
}

.history-text {
  margin-left: 16rpx;
  font-size: var(--td-font-size-base);
  color: var(--td-gray-color-7);
}

/* 热门搜索 */
.hot-search {
  padding: 24rpx;
  background-color: #fff;
  margin-top: 20rpx;
}

.hot-title {
  font-size: var(--td-font-size-l);
  font-weight: 500;
  color: var(--td-gray-color-8);
  margin-bottom: 24rpx;
}

.hot-list {
  display: flex;
  flex-wrap: wrap;
}

.hot-item {
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

/* 加载提示 */
.loading-container {
  padding: 60rpx 0;
  width: 100%;
  display: flex;
  justify-content: center;
}

.loading-text {
  margin-top: 12rpx;
  font-size: var(--td-font-size-base);
  color: var(--td-gray-color-5);
}

/* 搜索结果 */
.search-result {
  flex: 1;
  padding: 24rpx;
  background-color: #fff;
}

/* 菜品列表 */
.dish-list {
  display: flex;
  flex-direction: column;
}

/* 菜品卡片 */
.dish-card {
  margin-bottom: 24rpx;
  border-radius: 12rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
  overflow: hidden;
}

.card-hover {
  opacity: 0.9;
  transform: scale(0.99);
  transition: all 0.2s;
}

/* 菜品图片 */
.dish-image {
  width: 100%;
  height: 320rpx;
  background-color: var(--td-gray-color-1);
  object-fit: cover;
}

/* 菜品信息 */
.dish-info {
  padding: 20rpx 24rpx 24rpx;
}

/* 菜品名称 */
.dish-name {
  font-size: var(--td-font-size-l);
  font-weight: 500;
  color: var(--td-gray-color-8);
  margin-bottom: 8rpx;
  line-height: 1.4;
}

/* 菜品描述 */
.dish-desc {
  font-size: var(--td-font-size-s);
  color: var(--td-gray-color-5);
  margin-bottom: 16rpx;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 菜品标签 */
.dish-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
  margin-top: 8rpx;
}

.dish-tag {
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}

/* 菜品底部区域 */
.dish-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
}

/* 价格和添加按钮区域 */
.dish-price-action {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

/* 价格和销量区域 */
.dish-price-sales {
  display: flex;
  flex-direction: column;
}

/* 价格 */
.dish-price {
  display: flex;
  align-items: baseline;
  color: var(--td-brand-color);
}

.price-symbol {
  font-size: 24rpx;
  font-weight: normal;
}

.price-integer {
  font-size: 40rpx;
  font-weight: 500;
  margin-right: 8rpx;
}

/* 原价 */
.price-original {
  font-size: var(--td-font-size-s);
  color: var(--td-gray-color-5);
  text-decoration: line-through;
}

/* 销量展示 */
.dish-sales {
  font-size: var(--td-font-size-s);
  color: var(--td-gray-color-5);
  margin-top: 6rpx;
}

/* 添加按钮主体样式 */
.add-btn {
  border: none !important;
  width: 64rpx !important;
  height: 64rpx !important;
  min-width: 64rpx !important;
  margin-left: 16rpx !important;
  box-shadow: 0 4rpx 8rpx rgba(250, 85, 15, 0.2) !important;
  transition: all 0.2s !important;
}

.add-btn:active {
  transform: scale(0.95) !important;
  box-shadow: 0 2rpx 4rpx rgba(250, 85, 15, 0.1) !important;
}

.dish-action {
  display: flex;
  align-items: center;
}

/* 添加购物车图标样式 */
.add-cart-icon {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 56rpx;
  height: 56rpx;
  background-color: rgba(250, 85, 15, 0.1);
  border-radius: 50%;
  padding: 6rpx;
  box-shadow: 0 4rpx 8rpx rgba(250, 85, 15, 0.2);
  transition: all 0.2s;
}

.add-cart-icon:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 4rpx rgba(250, 85, 15, 0.1);
}
