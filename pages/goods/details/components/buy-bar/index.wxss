.footer-cont {
  background-color: #fff;
  padding: 16rpx 24rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -1px 5px rgba(0, 0, 0, 0.1);
}

.icon-warp {
  width: 110rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.operate-wrap {
  position: relative;
}

.bottom-operate-left {
  width: 100%;
}

.bottom-operate-left .icon-warp {
  width: 50%;
}

.tag-cart-num {
  display: inline-block;
  position: absolute;
  left: 50rpx;
  right: auto;
  top: 6rpx;
  color: #fff;
  line-height: 24rpx;
  text-align: center;
  z-index: 99;
  white-space: nowrap;
  min-width: 28rpx;
  border-radius: 14rpx;
  background-color: #FA550F !important;
  font-size: 20rpx;
  font-weight: 400;
  padding: 2rpx 6rpx;
}

.operate-text {
  color: #666;
  font-size: 20rpx;
}

.soldout {
  height: 80rpx;
  background: rgba(170, 170, 170, 1);
  width: 100%;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.addCart-disabled,
.bar-addCart-disabled {
  background: rgba(221, 221, 221, 1) !important;
  color: #fff !important;
  font-size: 28rpx;
}

.buyNow-disabled,
.bar-buyNow-disabled {
  background: rgba(198, 198, 198, 1) !important;
  color: #fff !important;
  font-size: 28rpx;
}

.bar-separately,
.bar-buy {
  width: 254rpx;
  height: 80rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.bar-separately {
  background: #ffece9;
  color: #FA550F;
  border-radius: 40rpx 0 0 40rpx;
}

.bar-buy {
  background-color: #FA550F;
  border-radius: 0rpx 40rpx 40rpx 0rpx;
}

/* 左侧区域：购物车图标和总价 */
.cart-price-area {
  display: flex;
  align-items: center;
  height: 100%;
}

.cart-icon {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  background-color: #f0f0f0;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 12rpx;
  transition: all 0.3s;
}

.cart-icon-has-goods {
  background-color: #FA550F;
}

.cart-count {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  min-width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  padding: 0 8rpx;
  border-radius: 36rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: white;
  background-color: #ff4b33;
  text-align: center;
  box-shadow: 0 0 0 2rpx #fff;
}

.price-area {
  margin-left: 12rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.total-price {
  display: flex;
  align-items: baseline;
  font-weight: bold;
  color: #FA550F;
}

.price-symbol {
  font-size: 24rpx;
  margin-right: 2rpx;
}

.price-integer {
  font-size: 36rpx;
  font-family: DIN Alternate, sans-serif;
}

.price-area-active .price-desc {
  color: #FA550F;
}

.price-desc {
  font-size: 24rpx;
  color: #999;
}

/* 右侧区域：加入购物车和结算按钮 */
.action-area {
  display: flex;
  align-items: center;
  height: 100%;
}

.btn-add-cart {
  height: 72rpx;
  padding: 0 24rpx;
  border-radius: 36rpx;
  font-size: 26rpx;
  background-color: #ffece9;
  color: #FA550F;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  font-weight: 500;
  transition: all 0.2s;
}

.btn-checkout {
  height: 72rpx;
  padding: 0 36rpx;
  border-radius: 36rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #CCCCCC;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 500;
  transition: all 0.2s;
}

.btn-active {
  background-color: #FA550F;
}

.btn-disabled {
  opacity: 0.6;
  background-color: #CCCCCC;
  color: #fff;
}

.flex {
  display: flex;
  display: -webkit-flex;
}

.flex-center {
  justify-content: center;
  -webkit-justify-content: center;
  align-items: center;
  -webkit-align-items: center;
}

.flex-between {
  justify-content: space-between;
  -webkit-justify-content: space-between;
}

/* 购物车弹出层样式 */
.cart-popup {
  width: 100%;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding-bottom: calc(env(safe-area-inset-bottom) + 16rpx);
}

.cart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.cart-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.cart-clear {
  display: flex;
  align-items: center;
  color: #999;
  font-size: 24rpx;
}

.cart-clear text {
  margin-left: 8rpx;
}

.cart-dish-list {
  max-height: 60vh;
  padding: 0 30rpx;
}

.cart-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  color: #999;
}

.empty-text {
  font-size: 28rpx;
  margin-top: 16rpx;
}

.cart-dish-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
  width: 100%;
}

.dish-info {
  flex: 1;
  overflow: hidden;
  margin-right: 16rpx;
}

.dish-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.dish-spec {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.dish-price {
  color: #FA550F;
  font-size: 28rpx;
  width: 100rpx;
  text-align: right;
  margin-right: 20rpx;
}

.dish-stepper {
  display: flex;
  align-items: center;
  width: 220rpx;
  justify-content: space-between;
  flex-shrink: 0;
}

.stepper-minus, .stepper-plus {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  color: #333;
  margin: 0 6rpx;
  position: relative;
  z-index: 5;
}

.stepper-minus text, .stepper-plus text {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1;
  position: relative;
  top: -1rpx;
  display: inline-block;
  width: 28rpx;
  height: 28rpx;
  text-align: center;
}

.stepper-plus {
  background-color: #FA550F;
  color: #fff;
}

.stepper-num {
  font-size: 28rpx;
  color: #333;
  width: 70rpx;
  text-align: center;
}
